<div class="card">
  <div class="cover">
    <img
      src=<%=game.cover%>
    />
  </div>

  <div class="card-info">
    <p class="card-title"><%=link_to game.name, game_path(game)%></p>
    <div class="card-details">
      <p>Genres:</p>
      <div class="tag-group">
        <%game.genres.each do |genre|%>
          <span class="tag"><%=genre.name%></span>
        <%end%>
      </div>
    </div>
    <div class="card-details">
      <p>Platforms:</p>
      <div class="tag-group">
        <%game.platforms.each do |platform|%>
          <span class="tag"><%=platform.name%></span>
        <%end%>
      </div>
    </div>
    <div class="card-details">
      <p>Companies:</p>
      <div class="tag-group">
        <%game.companies.each do |company|%>
          <span class="tag"><%=company.name%></span>
        <%end%>
      </div>
    </div>
  </div>
  <div class="card-metrics">
    <div class="rating">
      <p class="metric"><%=game.rating ? game.rating : "NO"%></p>
      <p class="metric-name">rating</p>
    </div>
    <div class="reviews">
      <p class="metric"><%=game.reviews.size%></p>
      <p class="metric-name">reviews</p>
    </div>
  </div>
</div>
