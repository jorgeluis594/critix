<%= form_for(@game) do |f| %>
  <ul>
  <% @game.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </p>
  <p>
    <%= f.label :release_date %><br />
    <%= f.date_field :release_date %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.collection_select :category, Game.categories, :first, :first, prompt: true %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.number_field :rating %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.collection_select :parent_id, Game.all, :id, :name, prompt: true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>